{
  "expo": {
    "name": "Driftr",
    "slug": "driftr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "driftr",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAF8F5"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.driftr.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Driftr needs camera access for your profile photo and video intro.",
        "NSMicrophoneUsageDescription": "Driftr needs microphone access for your video intro.",
        "NSLocationWhenInUseUsageDescription": "Driftr uses your location to find van lifers near you.",
        "NSPhotoLibraryUsageDescription": "Driftr needs photo library access to choose your profile photo."
      }
    },
    "android": {
      "package": "com.driftr.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FAF8F5"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-video",
      [
        "expo-camera",
        {
          "cameraPermission": "Driftr needs camera access for your profile photo and video intro.",
          "microphonePermission": "Driftr needs microphone access for your video intro.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Driftr uses your location to find van lifers near you."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#F06428"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Driftr needs photo library access to choose your profile photo."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "fa60cef5-0f55-4c44-9087-4b554ce2aa94"
      },
      "router": {}
    },
    "owner": "screamm"
  }
}
